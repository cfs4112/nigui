				"type": "group",
				"label": "Enable All Outputs",
				"actions": [
					{
						"device": "Dev1",
						"pin": "p0.0",
						"state": true
					},
					{
						"device": "Dev1",
						"pin": "p0.1",
						"state": true
					}
				]
			},
			{
