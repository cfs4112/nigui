					{
						"action": "wait",
						"seconds": 3
					},
					{
						"action": "wait_for",
						"device": "Dev1",
						"pin": "p1.5",
						"state": true,
						"timeout_seconds": 10
					},
					{
						"action": "set",
						"device": "Dev1",
						"pin": "p2.0",
						"state": false
					}
